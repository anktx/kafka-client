{
  "name": "anktx/kafka-client",
  "type": "library",
  "description": "PHP wrapper for RdKafka",
  "keywords": [
    "kafka",
    "redpanda",
    "client"
  ],
  "license": "BSD-3-Clause",
  "minimum-stability": "stable",
  "require": {
    "php": "^8.4",
    "ext-rdkafka": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^12.0"
  },
  "autoload": {
    "psr-4": {
      "Anktx\\Kafka\\Client\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Anktx\\Kafka\\Client\\Tests\\": "tests"
    }
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit=256M -v --level 6 --no-progress ./src",
    "cs-fix": "php-cs-fixer fix -v --diff --show-progress=dots",
    "tests": "phpunit tests",
    "coverage": "phpunit --coverage-text",
    "infection": "infection --show-mutations"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
